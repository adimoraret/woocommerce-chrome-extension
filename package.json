{
  "name": "woocommerce-chrome-extension",
  "version": "1.0.0",
  "description": "WooCommerce Chrome Extension",
  "scripts": {
    "test": "mocha --reporter progress tools/testSetup.js \"test/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "security-check": "nsp check",
    "lint": "esw webpack.config.* src tools",
    "lint:watch": "npm run lint -- --watch",
    "clean-dist": "npm run remove-dist && mkdir dist && cd dist && mkdir images && mkdir scripts",
    "remove-dist": "rimraf ./dist",
    "start-server": "babel-node tools/srcServer.js",
    "start": "npm-run-all --parallel security-check start-server test:watch lint:watch",
    "deploy-mapfiles": "babel src tools --out-dir map --watch --source-maps",
    "deploy-html": "babel-node tools/deployHtml.js",
    "deploy-manifest": "babel-node tools/deployManifest.js",
    "deploy-images": "babel-node tools/copyImages.js",
    "build-js": "babel-node tools/build.js",
    "prebuild": "npm run clean-dist",
    "build": "npm run build-js",
    "postbuild": "npm-run-all --parallel deploy-images deploy-manifest deploy-html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://codetrest@bitbucket.org/codetrest/woocommerce-chrome-extension.git"
  },
  "keywords": [
    "WooCommerce",
    "Chrome",
    "Extension"
  ],
  "author": "Adrian Moraret",
  "license": "ISC",
  "homepage": "https://bitbucket.org/codetrest/woocommerce-chrome-extension#readme",
  "devDependencies": {
    "axios": "^0.15.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-register": "^6.22.0",
    "bootstrap": "^3.3.7",
    "cheerio": "^0.22.0",
    "colors": "^1.1.2",
    "css-loader": "^0.25.0",
    "eslint": "^3.14.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-watch": "^2.1.14",
    "eventsource-polyfill": "^0.9.6",
    "expect": "^1.20.2",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.7.0",
    "font-awesome-webpack": "0.0.4",
    "glyphicons-halflings": "^1.9.0",
    "image-webpack-loader": "^3.0.0",
    "jquery": "^3.1.1",
    "jsdom": "^9.9.1",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^3.2.0",
    "moxios": "^0.3.0",
    "nock": "^9.0.2",
    "npm-run-all": "^3.1.1",
    "nsp": "^2.6.2",
    "open": "0.0.5",
    "react": "^15.3.2",
    "react-bootstrap": "^0.30.7",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-immutable-state-invariant": "^1.2.4",
    "redux-mock-store": "^1.2.1",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "toastr": "^2.1.2",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  }
}

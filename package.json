{
  "name": "woocommerce-chrome-extension",
  "version": "1.0.0",
  "description": "WooCommerce Chrome Extension",
  "main": "index.js",
  "scripts": {
    "test": "mocha --reporter progress tools/testSetup.js \"src/**/*.test.js\"",
    "clean-dist": "npm run remove-dist && mkdir dist && cd dist && mkdir images && mkdir scripts",
    "remove-dist": "node_modules/.bin/rimraf ./dist",
    "build-html": "node_modules/.bin/babel-node tools/buildHtml.js",
    "build-manifest": "node_modules/.bin/babel-node tools/buildManifest.js",
    "deploy-images": "node_modules/.bin/babel-node tools/copyImages.js",
    "bundle-js": "webpack",
    "prebuild": "npm run clean-dist",
    "build": "npm-run-all --parallel build-html build-manifest deploy-images bundle-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://codetrest@bitbucket.org/codetrest/woocommerce-chrome-extension.git"
  },
  "keywords": [
    "WooCommerce",
    "Chrome",
    "Extension"
  ],
  "author": "Adrian Moraret",
  "license": "ISC",
  "homepage": "https://bitbucket.org/codetrest/woocommerce-chrome-extension#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "cheerio": "^0.22.0",
    "colors": "^1.1.2",
    "npm-run-all": "^3.1.1",
    "react": "^15.3.2",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.4"
  }
}
